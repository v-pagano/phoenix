{% macro remove_files(directory, before, after) %}

{% if after is string %}
    {% set task_name %}{{ after }}{% endset %}
{% else %}
    {% set task_name %}{{ after[0] }}{% endset %}
{% endif %}

- name: removing_files_{{ task_name }}
  {% if before is not none %}
  before-re: {{ before }}
  {% endif %}
  after-re:
    {% if after is string %}
    - {{ after }}
    {% else %}
    {% for task in after %}
    - {{ task }}
    {% endfor %}
    {% endif %}
  walltime: "0:10:00"
  cpus: 1
  mem: 2G
  sbatch_args: ['--profile=ltask', '--acctg-freq=task=1']
  cmd: |
    sbatch -n1 -d$SLURM_JOB_ID --wrap="sh5util -j $SLURM_JOB_ID"
    set -eu
    set -o pipefail

    rm -r {{ directory }}

{% endmacro %}